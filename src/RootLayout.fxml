<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="640.0" spacing="45.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RootLayoutController">
   <children>
      <Label text="Welcome to Space Trader" textAlignment="CENTER">
         <font>
            <Font name="Consolas" size="29.0" />
         </font>
         <effect>
            <Reflection />
         </effect>
      </Label>
      <Button mnemonicParsing="false" onAction="#handleStart" text="Start">
         <font>
            <Font name="HoloLens MDL2 Assets" size="15.0" />
         </font>
      </Button>
   </children>
</VBox>
